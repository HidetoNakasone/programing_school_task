<div>
  <h1>投稿の一覧表示</h1>
  <div id="contents">
    <% @res.each do |item| %>
      <a href="/item/<%= item['id'] %>">
        <div class="item_wrap">
          <p><%= item['name'] %>さんによる投稿   『<%= item['title'] %>』</p>
          <p class="item_contet"><%= item['content'] %></p>
        </div>
      </a>
    <% end %>
  </div>
</div>
